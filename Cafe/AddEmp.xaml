<Window x:Class="Cafe.AddEmp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cafe"
        mc:Ignorable="d"
                Title="Добавить сотрудника" Height="450" Width="500" Background="#E6E6FA">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Имя:" FontWeight="Bold" />
            <TextBox x:Name="NameTextBox" Foreground="Black"/>
            <TextBlock Text="Должность:" FontWeight="Bold" />
            <TextBox x:Name="PositionTextBox" Foreground="Black"/>
            <Button Content="Добавить" Margin="10" Click="AddEmployee_Click" Background="#545d6a" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
